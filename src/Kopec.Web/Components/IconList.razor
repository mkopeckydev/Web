@using Kopec.Web.Model

@code {
    [Parameter]
    public IconListData data { get; set; } = new IconListData();
}

<div class="text-start">
    <h1 class="display-6 mb-4 ms-2">@data.Caption</h1>

    <div class="container text-start">

        @foreach (var group in data.Items)
        {
            <div class="row justify-content-start mb-3">

                <div class="col-2 text-end">
                    <img src=@group.Image class="img-thumbnail list-icon" alt=@group.ImageAlt>
                </div>
                <div class="col-10">
                    @if (group.HasRowsLabel)
                    {
                        <div class="mb-1 fw-bold fs-5">@group.RowsLabel</div>
                    }
                    <ul>
                        @foreach (var row in group.Rows)
                        {
                            <li>@row</li>
                        }
                        @foreach (var link in group.Links)
                        {
                            <li>@link.Label: <a class="link-secondary link-offset-2" href=@link.Url target="_blank">@link.UrlLabel</a></li>
                        }
                    </ul>
                </div>
            </div>
        }

    </div>
</div>
